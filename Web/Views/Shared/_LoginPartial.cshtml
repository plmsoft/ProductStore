@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
        <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" title="Current user"><span style="color:lightgray;font-style:italic;font-size:medium">@User.Identity.Name</span></a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="Users">Users</a>
                </li>
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
                </li>
            </ul>
        </form>
}
else
{
  <ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
  </ul>
}
